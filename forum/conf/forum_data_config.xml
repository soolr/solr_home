<dataConfig> 
  <dataSource type="JdbcDataSource" name="forum" driver="com.mysql.jdbc.Driver" url="jdbc:mysql://10.10.20.205:3306/bbs" user="root" password="rootdb1568"/>  
  <document> 
    <entity dataSource="forum" name="talk" query="SELECT uuid,title,description,CONVERT(status,CHAR) AS status,create_time FROM talk"> 
      <field column="uuid," name="uuid"/>  
      <field column="title" name="talk_title"/>  
      <field column="description" name="talk_description"/>  
      <field column="status" name="status"/>  
      <field column="create_time" name="create_time"/> 
    </entity>  
    <entity dataSource="forum" name="content" query="SELECT c.uuid,c.talk_uuid,m.description,CONVERT(c.ball,CHAR) AS ball,CONVERT(p.allow_gender_type,CHAR) AS allow_gender_type,m.img_url,CONVERT(c.status,CHAR) AS status,c.create_time FROM content c,content_priv p,(SELECT GROUP_CONCAT(description) AS description,GROUP_CONCAT(img_url) AS img_url,content_uuid FROM content_module GROUP BY content_uuid) m WHERE c.talk_uuid = p.talk_uuid AND c.uuid = m.content_uuid"> 
      <field column="uuid," name="uuid"/>  
      <field column="talk_uuid" name="talk_uuid"/>  
      <field column="description" name="content_content"/>  
      <field column="ball" name="ball"/>  
      <field column="allow_gender_type" name="allow_gender_type"/>  
      <field column="img_url" name="img_url"/>  
      <field column="status" name="status"/>  
      <field column="create_time" name="create_time"/> 
    </entity>  
    <entity dataSource="forum" name="review" query="SELECT r.uuid,c.content,t.talk_uuid,CONVERT(r.status,CHAR) AS status,r.create_time FROM review r,review_content c,content t WHERE r.id = c.review_id AND r.content_uuid = t.uuid"> 
      <field column="uuid" name="uuid"/>  
      <field column="talk_uuid" name="talk_uuid"/>  
      <field column="content" name="review_content"/>  
      <field column="status" name="rtatus"/>  
      <field column="create_time" name="create_time"/> 
    </entity> 
  </document> 
</dataConfig>
